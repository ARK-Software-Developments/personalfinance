                            <span class="form-label">Agosto:</span>
                            <input id="Agosto" name="Agosto" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@tarjetaConsumo.Agosto" value="@tarjetaConsumo.Agosto" required />
                        </div>
                    </td>
                    <td>
