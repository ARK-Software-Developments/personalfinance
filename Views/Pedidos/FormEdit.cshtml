@using PersonalFinance.Models.Pedidos
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


@{
    ViewBag.Title = "Formulario de Pedido";

    Pedido pedido = ViewBag.Pedido;
    var fechaPedido = pedido.FechaPedido?.ToString("yyyy-MM-dd");
    var fechaRecibido = pedido.FechaRecibido?.ToString("yyyy-MM-dd");
    
    var listaItems = new List<SelectListItem>
    {
        new SelectListItem {  Text = "PENDIENTE", Selected = (pedido.Estado.Nombre == "PENDIENTE" ? true: false) },
        new SelectListItem {  Text = "PEDIDO", Selected = (pedido.Estado.Nombre == "PEDIDO" ? true: false) }, // O establecer Selected=true
        new SelectListItem {  Text = "PAGADO", Selected = (pedido.Estado.Nombre == "PAGADO" ? true: false)  },
        new SelectListItem {  Text = "RECIBIDO", Selected = (pedido.Estado.Nombre == "RECIBIDO" ? true: false)  }
    };

    ViewBag.Items = listaItems;

    Console.WriteLine("se cargaron los options");
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/personalfinance.styles.css">

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <p>Formulario de Pedido.</p>
</div>

<form method="post" asp-controller="Pedidos" asp-action="FormEdit">
    <div class="form-group">
        <label for="name">Id:</label>

        <input type="text" id="Id" name="Id" class="form-control" value="@pedido.Id" readonly />

        <label for="name">Numero:</label>
        <input type="text" id="Numero" name="Numero" class="form-control" value="@pedido.Numero" readonly />

        <div class="form-group">
            <span class="form-label">Fecha Pedido:</span>
            <input id="FechaPedido" name="FechaPedido" class="form-control" type="date" data-language='es' value="@fechaPedido" required>
        </div>

        <div class="form-group">
            <span class="form-label">Fecha Recibido:</span>
            <input id="FechaRecibido" name="FechaRecibido" class="form-control" type="date" data-language='es' value="@fechaRecibido" required>
        </div>

        <label for="name">Monto Total:</label>
        <input type="text" id="MontoTotal" name="MontoTotal" class="form-control" value="@pedido.MontoTotal" />

        <label for="name">Tipo Recurso:</label>
        <input type="text" id="TipoRecurso" name="TipoRecurso" class="form-control" value="@pedido.TipoRecurso" />

        <div class="form-group">
            <span class="form-label">Estado:</span>
            @Html.DropDownList("@Estado", @ViewBag.Items,
            "SELECCIONE UNA OPCION", new { @class = "form-control" })
            <span class="select-arrow"></span>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<p></p>

<a href="/Pedidos" class="btn btn-primary">Volver</a>
