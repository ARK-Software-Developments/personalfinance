@using PersonalFinance.Helper
@using PersonalFinance.Models.Pedidos
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


@{
    var fechaActual = DateTime.Now.ToString("yyyy-MM-dd");
    Pedido pedido = ViewBag.Pedido;
    List<Estado> estados = ViewBag.Estados;

    var listaItems = new List<SelectListItem>();
    foreach(var e in estados)
    {
        listaItems.Add(
        new SelectListItem()
        {
            Value = e.Id.ToString(),
            Text = e.Nombre,
            Selected = (pedido.Estado.Nombre == e.Nombre ? true : false)
        });
    }

    ViewBag.Items = listaItems;

    int numeroPedido = Utils.GeneradorNumeroPedido();
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- STYLE CSS -->
<link rel="stylesheet" href="~/css/personalfinance.styles.css">

<script>
    function CambioEstado() {
                console.log("CambioEstado");
                console.log($('#Estado :selected').val());

                $('#EstadoSel').val($('#Estado :selected').val());
            };

</script>

<div class="text-center">
    <h1 class="display-5">@ViewBag.Title</h1>
    <p>Generación de @ViewBag.Modulo.</p>
</div>

<form method="post" asp-controller="Pedidos" asp-action="FormAdd">
    <div class="form-group">
        <table class="table table-primary">
            <tr>
                <td>
                    <div class="form-group">
                        <span class="form-label">Numero Pedido:</span>
                        <input id="Numero" name="Numero" class="form-control" type="number" value="@numeroPedido" required readonly>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <span class="form-label">Fecha Pedido:</span>
                        <input id="FechaPedido" name="FechaPedido" class="form-control" type="date" data-language='es' value="@fechaActual" required>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <span class="form-label">Fecha Recibido:</span>
                        <input id="FechaRecibido" name="FechaRecibido" class="form-control" type="date" data-language='es' value="@fechaActual" required>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <span class="form-label" for="name">Monto Total:</span>
                        <input id="MontoTotal" name="MontoTotal" class="form-control" type="number" min="0.00" max="1000000.00" step="0.01" value="" required />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <span class="form-label">Tipo Recurso:</span>
                        <select class="form-control" id="TipoRecurso" name="TipoRecurso" required>
                            <option>AVON</option>
                            <option>NATURA</option>
                            <option>VIOLETA</option>
                        </select>
                        <span class="select-arrow"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <span class="form-label">Estado:</span>
                        <select class="form-control" id="Estado" name="Estado" onchange="CambioEstado()" required>
                            @foreach (var item in ViewBag.Items)
                            {
                                if (item.Selected)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <span class="select-arrow"></span>
                        <input id="EstadoSel" name="EstadoSel" class="form-control" value="@pedido.Estado.Id" hidden>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Pedidos" asp-action="Index" name="action" value="generar">Generar</button>
</form>

<p></p>

<a href="/Pedidos" class="btn btn-secondary">Volver</a>
