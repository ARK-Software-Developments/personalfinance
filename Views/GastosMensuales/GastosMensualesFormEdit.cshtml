@using PersonalFinanceApiNetCoreModel;
@using PersonalFinance.Models.Gastos
@using PersonalFinance.Models.Tarjetas
@using System.Globalization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    CultureInfo culturaArgentina = new CultureInfo("es-AR");
    Gasto gasto = ViewBag.Gasto;
    List<Entidad> villeteras = ViewBag.Villeteras;
    List<TipoGasto> tiposGastos = ViewBag.TiposGastos;
    string modeView = ViewBag.ModeView ? "disabled" : "";

    var lstVilleteras = new List<SelectListItem>();
    foreach (var e in villeteras)
    {
        lstVilleteras.Add(
        new SelectListItem()
        {
            Value = e.Id.ToString(),
            Text = e.Nombre,
            Selected = e.Id == gasto.Villetera.Id ? true : false,
        });
    }

    var lstTiposGastos = new List<SelectListItem>();
    foreach (var e in tiposGastos)
    {
        lstTiposGastos.Add(
        new SelectListItem()
        {
            Value = e.Id.ToString(),
            Text = e.Tipo,
            Selected = e.Id == gasto.TipoGasto.Id ? true : false,
        });
    }
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/personalfinance.styles.css">

<script>
    function CambioVilletera() {
                console.log($('#Villetera :selected').val());

                $('#VilleteraSel').val($('#Villetera :selected').val());
            };

    function CambioTipoGasto() {
                console.log($('#TipoGasto :selected').val());

                $('#TipoGastoSel').val($('#TipoGasto :selected').val());
            };

</script>

<div class="text-center">
    <h1 class="display-5">@ViewBag.Title</h1>
    <p>Actualización de @ViewBag.Modulo.</p>
</div>

<div class="tab-content">
    <form method="post" asp-controller="@ViewBag.Modulo" asp-action="@ViewBag.Modulo" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <table class="table table-primary">
                <tr>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Identificador Interno:</span>
                            <input type="text" id="Id" name="Id" class="form-control" asp-for="@gasto.Id" value="@gasto.Id" readonly />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Villetera:</span>
                            <select id="Villetera" name="Villetera" class="form-control" onchange="CambioVilletera()" asp-for="@gasto.Villetera.Id" required>
                                @foreach (var item in @lstVilleteras)
                                {
                                    if (item.Selected)
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <span class="select-arrow"></span>
                            <input id="VilleteraSel" name="VilleteraSel" class="form-control" value="@gasto.Villetera.Id" hidden>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Tipo de Gasto:</span>
                            <select id="TipoGasto" name="TipoGasto" class="form-control" onchange="CambioTipoGasto()" asp-for="@gasto.TipoGasto.Id" required>
                                @foreach (var item in @lstTiposGastos)
                                {
                                    if (item.Selected)
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <span class="select-arrow"></span>
                            <input id="TipoGastoSel" name="TipoGastoSel" class="form-control" value="@gasto.TipoGasto.Id" hidden>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Resumen:</span>
                            <input type="text" id="Resumen" name="Resumen" class="form-control" asp-for="@gasto.Resumen" value="@gasto.Resumen" required />
                        </div>
                    </td>
                    <td colspan="2" >
                        <div class="form-group">
                            <span class="form-label">Observaciones:</span>
                            <input type="text" id="Observaciones" name="Observaciones" class="form-control" asp-for="@gasto.Observaciones" value="@gasto.Observaciones" />
                        </div>
                    </td>
                    
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Enero:</span>
                            <input id="Enero" name="Enero" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Enero" value="@gasto.Enero" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Febrero:</span>
                            <input id="Febrero" name="Febrero" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Febrero" value="@gasto.Febrero" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Marzo:</span>
                            <input id="Marzo" name="Marzo" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Marzo" value="@gasto.Marzo" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Abril:</span>
                            <input id="Abril" name="Abril" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Abril" value="@gasto.Abril" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Mayo:</span>
                            <input id="Mayo" name="Mayo" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Mayo" value="@gasto.Mayo" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Junio:</span>
                            <input id="Junio" name="Junio" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Junio" value="@gasto.Junio" required />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Julio:</span>
                            <input id="Julio" name="Julio" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Julio" value="@gasto.Julio" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Agosto:</span>
                            <input id="Agosto" name="Agosto" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Agosto" value="@gasto.Agosto" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Septiembre:</span>
                            <input id="Septiembre" name="Septiembre" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Septiembre" value="@gasto.Septiembre" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Octubre:</span>
                            <input id="Octubre" name="Octubre" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Octubre" value="@gasto.Octubre" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Noviembre:</span>
                            <input id="Noviembre" name="Noviembre" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Noviembre" value="@gasto.Noviembre" required />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span class="form-label">Diciembre:</span>
                            <input id="EnDiciembreero" name="Diciembre" class="form-control" type="text" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Diciembre" value="@gasto.Diciembre" required />
                        </div>
                    </td>
                    
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <div class="form-group">
                            <span class="form-label">Verificado:</span>
                            @if (gasto.Verificado)
                            {
                                <input type="checkbox" id="Verificado" name="Verificado" asp-for="@gasto.Verificado" checked />
                            }
                            else
                            {
                                <input type="checkbox" id="Verificado" name="Verificado" asp-for="@gasto.Verificado" />
                            }
                        </div>
                    </td>
                    <td colspan="2" align="center">
                        <div class="form-group">
                            <span class="form-label">Reservado:</span>
                            @if (gasto.Reservado)
                            {
                                <input type="checkbox" id="Reservado" name="Reservado" asp-for="@gasto.Reservado" checked />
                            }
                            else
                            {
                                <input type="checkbox" id="Reservado" name="Reservado" asp-for="@gasto.Reservado" />
                            }
                        </div>
                    </td>
                    <td colspan="2" align="center">
                        <div class="form-group">
                            <span class="form-label">Pagado:</span>
                            @if (gasto.Pagado)
                            {
                                <input type="checkbox" id="Pagado" name="Pagado" asp-for="@gasto.Pagado" checked />
                            }
                            else
                            {
                                <input type="checkbox" id="Pagado" name="Pagado" asp-for="@gasto.Pagado" />
                            }
                        </div>
                    </td>
                    <td colspan="2" align="center">
                        <div class="form-group">
                            <span class="form-label">Año:</span>
                            <input id="Ano" name="Ano" class="form-control" type="number" min="0.00" max="1000000.00" step="0.01" asp-for="@gasto.Ano" value="@gasto.Ano" disabled />
                        </div>
                    </td>
                </tr>
            </table>
            <p></p>
        </div>
        @if (string.IsNullOrEmpty(@modeView))
        {
            <button id="submit" type="submit" class="btn btn-primary" asp-controller="@ViewBag.Modulo" asp-action="@ViewBag.Modulo" name="action" value="actualizar">Actualizar</button>
        }

    </form>
</div>
<p></p>

<a href="/@ViewBag.Modulo" class="btn btn-secondary">Volver</a>
